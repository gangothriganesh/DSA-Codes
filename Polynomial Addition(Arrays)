#include<stdio.h>

struct polynomial
{
    int coe;
    int exp;
};

void input(struct polynomial poly[],int n)
{
    printf("enter the coefficients and exponents: ");
    for(int i=0;i<n;i++)
    {
        scanf("%d %d",&poly[i].coe,&poly[i].exp);
    
    }
}

void print(struct polynomial poly[],int n)
{
    for(int i=0;i<n;i++)
    {
        printf("%dx^%d",poly[i].coe,poly[i].exp);
        if(i!=n-1)
        {
            printf("+");
        
        }
    }
    printf("\n");
}

int add(struct polynomial poly1[],int n1,struct polynomial poly2[],int n2,struct polynomial polyresult[])
{
    int i=0,j=0,k=0;
    while(i<n1&&j<n2)
    {
        if(poly1[i].exp==poly2[j].exp)
        {
            polyresult[k].coe=poly1[i].coe+poly2[j].coe;
            polyresult[k].exp=poly1[i].exp;
            i++,j++,k++;
        }
        else if(poly1[i].exp>poly2[j].exp)
        {
            polyresult[k++]=poly1[i++];
        }
        else
        {
            polyresult[k++]=poly2[j++];
        }
    }
    while(i<n1)
    {
        polyresult[k++]=poly1[i++];
    }
    while(j<n2)
    {
        polyresult[k++]=poly2[j++];
    }
    return k;
}

int main()
{
    int n1,n2;
    printf("Enter the numbers of terms in poly1: ");
    scanf("%d",&n1);
    struct polynomial poly1[n1];
    input (poly1,n1);

    printf("Enter the numbers of terms in poly2: ");
    scanf("%d",&n2);
    struct polynomial poly2[n2];
    input (poly2,n2);

    struct polynomial polyresult[n1+n2];
    int resultsize=add(poly1,n1,poly2,n2,polyresult);

    printf("polynomial 1: \n");
    print(poly1,n1);

    printf("\npolynomial 2: \n");
    print(poly2,n2);


    printf("\nresulting polynomial: \n");
    print(polyresult,resultsize);

    return 0;
}
